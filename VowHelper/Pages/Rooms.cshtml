@page
@model VowHelper.Pages.RoomsModel
@{
    ViewData["Title"] = "Vow of the Disciple - Bonus Chest - Rooms";
}
<div id="app">
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Symbol</th>
            <th scope="col">Location</th>
            <th scope="col">Description</th>
        </tr>
        </thead>
        <tbody>
        <tr v-for="symbol in symbols">
            <td>
                <img :src="symbol.imageCaptioned" :alt="symbol.symbol"/>
            </td>
            <td>{{ symbol.location }}</td>
            <td>{{ symbol.description }}</td>
        </tr>
        </tbody>
    </table>
</div>

@section Scripts
{
    <script type="module">
    import {app} from "/js/site.js";
    
    app.mount("#app");
    </script>
}
